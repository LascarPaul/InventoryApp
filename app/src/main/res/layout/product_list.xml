<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="@dimen/cardViewMargin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="140dp"
                android:layout_height="138dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/imageMargin" />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/activityDetailMargin"
                android:textSize="@dimen/textSize1" />

            <TextView
                android:id="@+id/product_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_name"
                android:layout_marginBottom="@dimen/activityDetailMargin"
                android:layout_marginLeft="@dimen/activityDetailMargin"
                android:layout_marginRight="@dimen/activityDetailMargin"
                android:textSize="@dimen/textSize1" />


            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_quantity"
                android:layout_marginBottom="@dimen/activityDetailMargin"
                android:layout_marginLeft="@dimen/activityDetailMargin"
                android:layout_marginRight="@dimen/activityDetailMargin"
                android:textSize="@dimen/textSize1" />

            <TextView
                android:id="@+id/product_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/product_price"
                android:layout_marginBottom="@dimen/activityDetailMargin"
                android:layout_marginLeft="@dimen/activityDetailMargin"
                android:layout_marginRight="@dimen/activityDetailMargin"
                android:textSize="@dimen/textSize1" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/cardViewMargin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#00897B" />

            <ImageView
                android:id="@+id/product_buy_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/activityDetailMargin"
                android:layout_marginLeft="@dimen/activityDetailMargin"
                android:layout_marginRight="@dimen/activityDetailMargin" />

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_alignParentBottom="true"
                android:background="#00897B" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>