<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@drawable/gradient"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_marginTop="@dimen/activityDetailMarginTop2"
            android:layout_centerHorizontal="true"
            android:id="@+id/product_image_editor"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/product_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_image_editor" />

        <TextView
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/product_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name1"
            android:text="NAME" />

        <EditText
            android:layout_centerHorizontal="true"
            android:id="@+id/product_name_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name2" />

        <TextView
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:id="@+id/product_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_name_editor"
            android:text="PRICE" />

        <EditText
            android:layout_centerHorizontal="true"
            android:inputType="number"
            android:id="@+id/product_price_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/product_price1" />

        <TextView
            android:id="@+id/product_quantity1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/product_price_editor"
            android:layout_centerHorizontal="true"
            android:text="QUANTITY"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/stock_increment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/product_quantity1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/activityDetailMargin"
            android:layout_marginRight="@dimen/activityDetailMargin"
            android:background="@drawable/ic_add_black_24dp"
            android:elevation="0dp"
            android:text="@string/increment" />

        <EditText
            android:id="@+id/product_quantity_editor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/stock_increment"
            android:layout_centerHorizontal="true"
            android:inputType="number" />

        <Button
            android:id="@+id/stock_decrement"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/product_quantity_editor"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="@dimen/activityDetailMargin"
            android:layout_marginRight="@dimen/activityDetailMargin"
            android:background="@drawable/ic_remove_black_24dp"
            android:text="@string/decrement" />

    </RelativeLayout>

</ScrollView>